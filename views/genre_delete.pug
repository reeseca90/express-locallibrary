extends layout

block content
  h1 #{title}: #{genre.name}

  if genre_books.length

    p #[strong Genre is in use. Remove this genre from the following books before deleting.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Books

      dl
      each book in genre_books
        dt
          a(href=book.url) #{book.title}

  else
    p Do you really want to delete this Genre?

    form(method='POST' action='')
      div.form-group
        input#genreid.form-control(type='hidden',name='genreid', required='true', value=genre._id )

      button.btn.btn-primary(type='submit') Delete